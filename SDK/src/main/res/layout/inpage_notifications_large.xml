<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_16sdp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_10sdp">

        <RelativeLayout
            android:id="@+id/rootParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <LinearLayout
                android:id="@+id/content_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/contentLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:maxLines="1"
                        android:padding="3dp"
                        android:text="Welcome to all"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium.Inverse"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/descriptions"
                        android:layout_width="wrap_content"
                        android:layout_height="41dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:padding="3dp"
                        android:text="Welcome to all"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rParant"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_above="@+id/lay_actions"
                android:layout_below="@+id/content_frame"
                android:background="@android:color/transparent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="WebViewLayout">


                    <WebView
                        android:id="@+id/web_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:visibility="gone" />


                    <ImageView
                        android:id="@+id/img_banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_launcher"
                        android:visibility="gone" />


                    <com.google.android.exoplayer2.ui.PlayerView
                        android:id="@+id/video_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:resize_mode="zoom" />


                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/re_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/no_media"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:text="No Media Available" />

                    <ProgressBar
                        android:id="@+id/progressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/iv_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_arrow" />

                    <ImageView
                        android:id="@+id/iv_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:rotation="180"
                        android:src="@drawable/ic_arrow"
                        android:visibility="gone" />

                </RelativeLayout>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/lay_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:id="@+id/actions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/option1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:maxLines="1"
                        android:padding="@dimen/_10sdp"
                        android:text="Maybe Later"
                        android:textColor="@android:color/black" />

                    <Button
                        android:id="@+id/option2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:maxLines="1"
                        android:padding="@dimen/_10sdp"
                        android:text="Dismiss"
                        android:textColor="@android:color/black" />
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/iv_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:drawableRight="@drawable/ic_cancel_black_24dp"
                android:padding="5dp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>