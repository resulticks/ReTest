<resources>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#000000</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#FFFFFF</item>
    </style>


    <style name="leftAnimation" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#000000</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

    <style name="rightAnimation" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#000000</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:windowEnterAnimation">@anim/slide_right</item>
        <item name="android:windowExitAnimation">@anim/slide_left</item>
    </style>


    <style name="fadeAnimation" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#000000</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="sideUpDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

    <style name="sideDownDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_up</item>
    </style>

</resources>
